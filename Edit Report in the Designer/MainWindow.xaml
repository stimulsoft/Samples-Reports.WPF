<Window x:Class="Edit_Report_in_the_Designer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Edit_Report_in_the_Designer"
        mc:Ignorable="d"
        Title="Edit Report in the Designer" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid>
        <Button Content="Create New Report" HorizontalAlignment="Left" Margin="97,50,0,0" Padding="10,5" VerticalAlignment="Top" Width="190" Click="ButtonNew_Click"/>
        <Button Content="Edit Report in the Designer" HorizontalAlignment="Left" Margin="97,90,0,0" Padding="10,5" VerticalAlignment="Top" Click="ButtonV2_Click" Width="190"/>
        <Button Content="Use the Designer Control" HorizontalAlignment="Left" Margin="97,130,0,0" Padding="10,5" VerticalAlignment="Top" Width="190" Click="ButtonControlV2_Click"/>
    </Grid>
</Window>
